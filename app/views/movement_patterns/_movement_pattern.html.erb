<% if action_name != "show" %>
  <tr id="<%= dom_id movement_pattern %>" class="table-row">
    <td class="table-cell text-center border border-gray-400">
      <%= movement_pattern.name %>
    </td>
    <td class="table-cell text-center border border-gray-400">
      <%= movement_pattern.description %>
    </td>
    <td class="table-cell text-center border border-gray-400">
      <%= movement_pattern.exercises.length %>
    </td>
    <td class="table-cell text-center border border-gray-400">
      <div class="flex flex-row items-center justify-evenly">
        <%= link_to movement_pattern do %>
          <%= render 'shared/view_icon' %>
        <% end %>
        <%= link_to edit_movement_pattern_path(movement_pattern), class: "border-1 border-solid rounded-sm" do %>
          <%= render 'shared/edit_icon' %>
        <% end %>
        <hr class="mt-6">
      </div>
    </td>
  </tr>
<% end %>

<% if action_name == "show" %>
  <div id="<%= dom_id movement_pattern %>">
    <p class="my-5">
      <strong class="block font-medium mb-1">Name:</strong>
      <%= movement_pattern.name %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Description:</strong>
      <%= movement_pattern.description %>
    </p>

    <% if action_name != "show" %>
      <%= link_to "Show this movement pattern", movement_pattern, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Edit this movement pattern", edit_movement_pattern_path(movement_pattern), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <hr class="mt-6">
    <% end %>
</div>
<% end %>



