<div id="<%= dom_id muscle_group %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Id:</strong>
    <%= muscle_group.id %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= muscle_group.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= muscle_group.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this muscle group", muscle_group, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this muscle group", edit_muscle_group_path(muscle_group), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
