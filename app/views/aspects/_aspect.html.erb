<% if action_name != "show" %>
  <tr class="table-row">
    <td class="table-cell text-center border border-gray-400">
      <%= aspect.name %>
    </td>
    <td class="table-cell text-center border border-gray-400">
      <%= aspect.description %>
    </td>
    <td class="table-cell text-center border border-gray-400">
      <%= aspect.blocks.length %>
    </td>
    <td class="table-cell text-center border border-gray-400">
      <div class="flex flex-row items-center justify-evenly">
        <%= link_to aspect, {"data-turbo-frame": "_top"} do %>
          <%= render 'shared/view_icon' %>
        <% end %>
        <%= link_to edit_aspect_path(aspect), {class: "border-1 border-solid rounded-sm", "data-turbo-frame": "_top"} do %>
          <%= render 'shared/edit_icon' %>
        <% end %>
        <hr class="mt-6">
      </div>
    </td>
  </tr>
<% end %>
<% if action_name == "show" %>
  <div id="<%= dom_id aspect %>" class="border-solid rounded-md border-2 p-2 m-1">
    <p class="my-5">
      <strong class="block font-medium mb-1">Name:</strong>
      <%= aspect.name %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Description:</strong>
      <%= aspect.description %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1"># blocks:</strong>
      <%= aspect.blocks.length %>
    </p>

    <% if action_name != "show" %>
      <%= link_to "Show this aspect", aspect, {class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"} %>
      <%= link_to "Edit this aspect", edit_aspect_path(aspect), {class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"} %>
      <hr class="mt-6">
    <% end %>
  </div>
<% end %>