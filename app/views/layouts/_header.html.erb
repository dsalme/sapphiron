<!--<header class="flex items-center justify-center">-->
<header class="bg-gray-800 text-white p-2.5 fixed w-full z-10">
    <div class="container mx-auto flex flex-row justify-between items-center">
        <div>
            <%= link_to 'SAPPHIRON', root_path, class: 'text-2xl' %>
        </div>
        <div>
            <% if rodauth.logged_in? %>
                Logged in as: <%= current_account.profile.name %>
                <%= link_to "Sign out", rodauth.logout_path, data: { turbo_method: :post }, class: "border rounded-lg p-2 ml-1" %>
            <% else %>
                <%= link_to "Sign in", rodauth.login_path, {class: "border rounded-lg p-2 mr-1"} %>
                <%= link_to "Sign up", rodauth.create_account_path, {class: "border rounded-lg p-2"} %>
            <% end %>
        </div>
    </div>
</header>