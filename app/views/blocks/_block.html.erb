<div id="<%= dom_id block %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= block.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= block.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Protocol:</strong>
    <%= block.protocol_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Aspect:</strong>
    <%= block.aspect_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Series:</strong>
    <%= block.series %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Duration:</strong>
    <%= block.duration %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this block", block, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this block", edit_block_path(block), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
